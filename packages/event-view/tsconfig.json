{
  "extends": "../../tsconfig.react-package.json",
  "compilerOptions": {
    "plugins": [{ 
      "transform": "@formatjs/ts-transformer",
      "import": "transform",
      "type": "config",
      "overrideIdFn": "[sha512:contenthash:base64:6]",
      "ast": true
    }],
    "baseUrl": "./",
    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*"
  ]
}
