{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictBindCallApply": true,
    "strict": true,
    "typeRoots": [
      "@types"
    ],
    "types": [
      "react-dom/experimental",
      "jest",
    ],
    "lib": [
      "es6",
      "DOM"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "packages/**/*",
    "./jest-setup.ts"
  ],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "**/designSystem/**"
  ]
}